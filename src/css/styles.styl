$greenFg = #3dd565
$fontFamily = Montserrat

body
	background-color #0e0e0e
	color #fff
	margin 0
	font-family $fontFamily

.emptyList
	font-size 12px
	text-align center
	i
		color: rgba(255,255,255, .6)
		display block
		font-size 80px
		margin-bottom 30px
		padding 0

.songItem
	border-bottom 1px solid rgba(255, 255, 255, .1)
	display block
	margin: 8px 0
	font-size 0

	.actionItems
		display block 
		float right
		width 40px
		height 40px
		cursor pointer
		i 
			color: rgba(255,255,255, .6)
			display block
			font-size 30px
			padding 0

	.imagePreview
		display inline-block
		font-size 14px
		height: 60px
		margin-right: 15px
		vertical-align: top
		width: 60px
		
		img 
			max-height: 60px
			max-width: 60px

	.songData
		display inline-block
		font-size 14px
		vertical-align: top
		.title
			color: #ffffff
			font-size: 16px
		.artist
			color: rgba(255, 255, 255, .9)
			font-size 12px
			span 
				color: rgba(255, 255, 255, .6)

.intivifyApp

	.loginButtonContainer
		text-align center
		padding 30px 0

		.loginButton
			background-color $greenFg
			border none
			border-radius 20px
			color #fff
			display inline-block
			font-family $fontFamily
			font-size 14px
			font-weight 700
			height 40px
			line-height 40px
			padding 0 30px
			text-align center
			text-transform uppercase

	.container
		padding-top 60px
		font-size: 0

		.favoritesPanel
			border-left: 2px dotted rgba(255, 255, 255, .15)
			box-sizing: border-box
			display inline-block
			font-size: 16px
			padding-left: 20px
			text-align left
			vertical-align: top
			width: 40%

			.favoritesList
				color: rgba(255,255,255, .7)

				.actionItems
					display none

				.songData
					width 330px

				.noFavs
					@extends .emptyList

		.panelTitle
			color #ffffff
			font-family $fontFamily
			font-size 18px
			margin: 5px 0 20px 0

		.searchPanel
			box-sizing: border-box
			display inline-block
			font-size: 16px
			padding-right: 15px
			text-align left
			vertical-align: top
			width: 60%

			.searchResults
				.noResults
					@extends .emptyList

			.resultsSongs
				text-align: left

				.songData
					width 500px

			.searchInput
				background-color #ffffff
				border-radius 20px
				display inline-block
				width 400px
				input 
					background transparent
					border none 
					color #888888
					font-family $fontFamily
					font-size 16px
					height 40px
					line-height 40px
					outline none
					padding-left 40px
					padding-right 40px
					width 100%
					&:focus
						color #444

